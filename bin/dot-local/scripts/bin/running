#!/usr/bin/env bash

# Usage: running foo
#
# Basically like `ps aux | grep foo` but simpler to read. Only prints the PID
# and the command.
#
# borrowed from Evan Hahn

set -e
set -u

process_list="$(ps -eo 'pid command')"
if [[ $# != 0 ]]; then
  process_list="$(echo "$process_list" | grep -Fiw "$@")"
fi

echo "$process_list" |
  grep -Fv "${BASH_SOURCE[0]}" |
  grep -Fv grep |
  GREP_COLORS='mt=00;35' grep -E --colour=auto '^\s*[[:digit:]]+'
