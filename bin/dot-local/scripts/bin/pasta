#!/usr/bin/env bash
#
# Usage: pasta | some_command
#        pasta > file.txt
#
# System agnostic wrapper for xclip and pbpaste
#
# borrowed from Evan Hahn

set -e
set -u

if hash pbpaste 2>/dev/null; then
  exec pbpaste
elif hash xclip 2>/dev/null; then
  exec xclip -selection clipboard -o
elif [[ -e /tmp/clipboard ]]; then
  exec cat /tmp/clipboard
else
  echo ''
fi
